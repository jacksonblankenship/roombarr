{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,

    // Inversify
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src", "mocks"]
}
